<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Socket.io Example</title>
  </head>
  <body>
    <h1>Welcome to Socket.io Example</h1>
    <input type="text" placeholder="Enter the text" id="userinput" />
    <button id="btn1">Summit</button>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io();

      var userinput = document.getElementById("userinput");
      var clk = document.getElementById("btn1");
      
      clk.addEventListener('click',e=>{
        const message=userinput.value;
        console.log(message);
        socket.emit('message',message)
        socket.on('mag',(message)=>{
            console.log('message');
            
        })
        
      })
    </script>
  </body>
</html>
